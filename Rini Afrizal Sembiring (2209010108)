       tampilanteks.setText(angka);
    }                                    

    private void samadenganActionPerformed(java.awt.event.ActionEvent evt) {                                           
switch(pilih){
            case 1:
            bil2 = Double.parseDouble (angka);
            jumlah = bil1+bil2;
            angka = Double.toString(jumlah);
            tampilanteks.setText (angka);
            break;
            case 2:
             bil2 = Double.parseDouble(angka);
             jumlah = bil1-bil2;
             angka = Double.toString(jumlah);
             tampilanteks.setText(angka);
             break;
             case 3:
             bil2 = Double.parseDouble(angka);
             jumlah = bil1*bil2;
             angka = Double.toString(jumlah);
             tampilanteks.setText(angka);
             break;
             case 4:
             bil2 = Double.parseDouble(angka);
             jumlah = bil1/bil2;
             angka = Double.toString(jumlah);
             tampilanteks.setText(angka);
             break;
             case 5:
             bil2 = Double.parseDouble(angka);
             jumlah = bil1%bil2;
             angka = Double.toString(jumlah);
             tampilanteks.setText(angka);
             default:
             break;
    }                                          
                                                        
